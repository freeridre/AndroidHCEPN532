<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_enter_pass_code"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"

    tools:context=".EnterPassCodeActivity"
    android:background="@color/mainbgColor"
    android:theme="@style/HiddenTitleTheme"
    >

    <in.codeshuffle.typewriterview.TypeWriterView
        android:id="@+id/typeWriterView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textSize="10dp"
        android:layout_gravity="left"
        android:layout_marginTop="295dp"
        android:gravity="left"
        android:layout_marginLeft="3dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textCursorDrawable="@color/white"
        android:textColor="@color/white"


        android:inputType="numberPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/line1lottie"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="326.5dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/line1"
        />

    <Button
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/enter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:background="@android:color/transparent"
        android:text="ENTER"
        android:textColor="#FFFFFF"
        tools:ignore="NotSibling" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/enter_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/enter_4" />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:id="@+id/enter_bg"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/locked_2"

        />




</RelativeLayout>